
@using Books.Controllers;
@using BooksLib;

@model Book
@{ 
	int selID = 0;
	IEnumerable<int> selAuthorID = new List<int>();
	string Page = ViewBag.page;
	IEnumerable<Author> authors = ViewBag.authors;
	IEnumerable<Publisher> publishers = ViewBag.publishers;
}
	
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Create/Edit</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous" />
	<link href="~/Styles/style.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1>@Page</h1>
				@using (Html.BeginForm("Edit", "Book", FormMethod.Post))
				{
				<div>
					@Html.HiddenFor(model => Page)
					@Html.HiddenFor(model => model.ID)
					<div class="inputField">
						@Html.LabelFor(model => model.Name)
						@Html.EditorFor(model => model.Name)
						@Html.ValidationMessageFor(model => model.Name)
					</div>
					<div class="inputField">
						@Html.LabelFor(model => model.Author)
						@Html.ListBoxFor(model => selAuthorID, new SelectList(authors, "ID", "Name"))
					</div>
					<div class="inputField">
						@Html.LabelFor(model => model.Publisher)
						@Html.DropDownListFor(model => selID, new SelectList(publishers, "ID", "Name"))
					</div>
					<div class="inputField">
						@Html.LabelFor(model => model.PublishDate)
						@Html.EditorFor(model => model.PublishDate)
						@Html.ValidationMessageFor(model => model.PublishDate)
					</div>
					<div class="inputField">
						@Html.LabelFor(model => model.PageCount)
						@Html.EditorFor(model => model.PageCount)
						@Html.ValidationMessageFor(model => model.PageCount)
					</div>
					<div class="inputField">
						@Html.LabelFor(model => model.ISBN)
						@Html.EditorFor(model => model.ISBN)
						@Html.ValidationMessageFor(model => model.ISBN)
					</div>
					<div class="inputField">
						<input type="submit" value="Save" />
					</div>
					<div class="inputField">
						@Html.ActionLink("Books", "List")
					</div>

				</div>
				}
			</div>
		</div>
	</div>
</body>
</html>
